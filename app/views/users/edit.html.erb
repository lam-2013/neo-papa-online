<% provide :title, 'Modifica profilo' %>

<h1>Modifica il tuo profilo</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

        <%= render 'shared/error_messages', object:f.object %>

        <%= f.label :name, 'Nome' %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, 'Conferma password' %>
        <%= f.password_field :password_confirmation %>

        <%= f.label :n_children, 'Numero di figli'%>
        <%= f.text_field :n_children %>

        <%= f.submit 'Salva le modifiche', class: 'btn btn-large btn-primary' %>

    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">Cambia la tua immagine</a>
  </div>
</div>