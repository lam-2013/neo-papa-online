<div class="row">
  <div class="registrati">
    <%= form_for(@user) do |f| %>

        <%= render 'shared/error_messages' %>

        <%= f.label :name, 'Nome' %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, 'Conferma password' %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit 'Crea il mio account', class: 'btn btn-large btn-primary' %>

    <% end %>
  </div>
</div>





