<% provide :title, 'Registrazione' %>

<h1>Registrati</h1>

<div class="row">
    <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

        <%= render 'shared/error_messages', object:f.object %>

        <%= f.label :name, 'Nome *' %>
        <%= f.text_field :name %>

        <%= f.label :email, 'Email *'%>
        <%= f.text_field :email %>

        <%= f.label :password, 'Password *' %>
        <%= f.password_field :password%>

        <%= f.label :password_confirmation, 'Conferma password *' %>
        <%= f.password_field :password_confirmation %>

        <%= f.label :n_children, 'NÂ° figli *' %>
        <%= f.text_field :n_children %>



        <div>I campi contrassegnati dall'astrisco (*) sono obbligatori</div>
        <%= f.submit 'Crea il mio account', class: 'btn btn-large btn-primary' %>

    <% end %>
  </div>
</div>





