<% provide :title, 'Registrazione' %>

<h1>Registrazione</h1>

<div class="row">
    <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

        <%= render 'shared/error_messages', object:f.object %>

        <%= f.label :name, 'Nome *' %>
        <%= f.text_field :name %>

        <%= f.label :email, 'Email *'%>
        <%= f.text_field :email %>

        <%= f.label :password, 'Password *' %>
        <%= f.password_field :password%>

        <%= f.label :password_confirmation, 'Conferma password *' %>
        <%= f.password_field :password_confirmation %>

        <%= f.label :n_children, 'NÂ° figli *' %>
        <%= f.select :n_children, ['0', '1', '2', '3', '4', '5'] %>

        <div>I campi contrassegnati dall'astrisco (*) sono obbligatori</div>
          <br />
        <%= link_to 'Annulla', root_path, role: 'button', class: 'btn btn-large btn-primary'  %>
        <%= f.submit 'Crea il mio account', class: 'btn btn-large btn-primary' %>

    <% end %>
  </div>
</div>





