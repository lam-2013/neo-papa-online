<% provide :title %>

<% if signed_in? %>

  <div class="row">

    <div class="row">
      <%= render 'questions/menu' %>
    </div>

    <div class="row">
      <%= render 'questions/search_form' %>
    </div>

    <div class="span8">
      <% if @user.questions.any? %>
        <h1 class="offset3">Mie domande: <%= @user.questions.count %></h1>
        <ol class="users">
          <%= render @questions %>
        </ol>
        <%= will_paginate @questions %>
      <% end %>
    </div>

  </div>

<% else %>
  <p>Login non effettuato. <%= link_to 'Home', root_path %> </p>
<% end %>
