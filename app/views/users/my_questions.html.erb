<% provide :title %>

    <div class="row">

      <%#= render 'questions/list_category' %>
      <%#=  render 'questions/list_age_groups' %>

      <%= render 'questions/menu' %>
      <%= render 'questions/search_form' %>

      <%# blocco per sapere quanti mi piace gli altri utenti hanno dato alle domande che ha scritto l'utente loggato %>
      <p>Numero di "Mi piace": <%=  @like %></p>
      <p>(Quando supererai i 2 "Mi piace" da parte degli altri utenti avrai la possibilit√† di aggiungere nuove catogorie)</p>

      <% if current_user.admin? || @like > 2 %>
          <%= link_to 'Nuova Categoria', new_category_path, role: 'button', class: 'btn btn-info' %>
      <% end %>

      <div class="span8">

        <% if @user.questions.any? %>
            <h3>Mie domande: <%= @user.questions.count %></h3>
            <ol class="questions">
              <%= render @questions %>
            </ol>
            <%= will_paginate @questions %>
        <% end %>
      </div>

    </div>
