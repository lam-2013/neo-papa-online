<% provide(:title, @title) %>

<%= render 'users/menu_profilo' %>

<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to 'Mio profilo', @user %></span>
      <span><b>Posts:</b> <%= @user.posts.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>

  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
        <ul class="users">
          <h3>Followers</h3>
          <%= render @users %>
        </ul>
        <ul class="users">
          <h3>Following</h3>
          <%= render @users2 %>
        </ul>
        <%= will_paginate %>
    <% end %>
  </div>
</div>