<% provide :title, @user.name %>

<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>


    <div class="post">
      <% if @user.posts.any? %>

        <h3>(<%= @user.posts.count%>) Post</h3>

          <ol>
            <%= render @posts %>
          </ol>
          <% will_paginate @posts %>

      <% end %>
    </div>
</div>