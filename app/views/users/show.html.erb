<% provide :title, @user.name %>

<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>

    <section>
      <% render 'shared/stats' %>
    </section>
    <% if current_user.following?(@user) %>
        <section>
          <%= link_to 'Nuovo messaggio', new_message_path(user: @user.id), role: 'button', class: 'btn btn-info', remote: true %>
          <div class="message"></div>
        </section>
    <% end %>
  </aside>

  <div class="span8">
    <%=  render 'follow_form' if signed_in? %>
    <% if @user.posts.any? %>
      <h3>Post (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <% will_paginate @posts %>
    <% end %>
  </div>
</div>
