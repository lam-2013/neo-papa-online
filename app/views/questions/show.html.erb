<% provide :title %>

<% if signed_in? %>

  <div class="row">

    <%= render 'list_category' %>

    <div class="span9">

      <h3>Domanda</h3>

      <%= link_to gravatar_for (@question.user), @question.user %>
      <%= link_to @question.user.name, @question.user %>  <br>

      <span class="content">
        <p><%= @question.title %></p>
        <p><%= category_name(@question) %></p>
        <p><%= age_groups_name(@question) %></p>
        <p><%= @question.content %></p>
        <span class="timestamp">
          Posted <%= time_ago_in_words(@question.created_at) %> ago
        </span>

        <% if @question.user == current_user %>
          <%#= link_to 'delete', @question, method: :delete, data: {confirm: 'Sei sicuro?'}%>
            bu
         <% end %>


        <%= render 'questions/answer_form'%>

        <% if @question.answers.any? %>
            <h3>Risposte (<%= @question.answers.count %>)</h3>
            <ol class="posts">
              <%= render @answers %>
            </ol>
            <%= will_paginate @answers %>
        <% end %>



      </span>
    </div>
  </div>
<% end %>