<% provide :title, 'Risultati ricerca' %>

<% if signed_in? %>

  <div class="row">
    <%= render 'questions/menu' %>
  </div>

  <div class="row">
    <%= render 'questions/search_form' %>
  </div>

  <h1><%= page_entries_info @questions %></h1>
  <ul class="users">
    <%= render @questions %>
  </ul>

  <%= will_paginate %>

<% else %>
    <p>Login non effettuato. <%= link_to 'Home', root_path %> </p>
<% end %>