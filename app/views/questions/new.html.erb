<div class="row">
  <div class="span6 offset3">
    <%= form_for(@question) do |f| %>

        <%= render 'shared/error_messages', object:f.object %>



        <%= f.label :title, 'Titolo *' %>
        <%= f.text_field :title %>

        <%= f.label :category_id, 'Numero categoria *'%>
        <%= f.text_field :category_id %>

        <%= f.label :age_group_id, 'Fascia d\'etÃ  *' %>
        <%= f.text_field :age_group_id %>

        <%= f.text_area :content %>

