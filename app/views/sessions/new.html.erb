<% provide :title %>

<% if signed_in? %>
    <div class="row">

      <aside class="span3">

        <section>
          <%= render 'shared/user_info' %>
        </section>

        <section>
          <%= render 'shared/stats' %>
        </section>

      </aside>

      <div class="span9">
        <%= render 'shared/post_form' %>
        <h3>Wall</h3>
        <%=  render 'shared/feed' %>
      </div>
    </div>

<%else%>

    <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit 'Login', class: 'btn btn-large btn-primary' %>


    <div class="center hero-unit">
      <h1>Benvenuto in New Dad</h1>
      <div>Sei un nuovo utente? <%= link_to 'Registrati ora!', signup_path, class: 'btn btn-large btn-primary' %></div>
    </div>

        <video id="video1" width="320" height="240" controls>
          <source src="video/Intermission-Walk-in.ogv" type="video/ogg">
          <source src="video/Intermission-Walk-in_512kb.mp4" type="video/mp4">
        </video>

<% end %>

<% end %>
