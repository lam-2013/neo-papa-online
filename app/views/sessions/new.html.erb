<% provide :title %>

<% if signed_in? %>
    <div class="row">
      <aside class="span4">

        <section>
          <%= render 'shared/user_info' %>
        </section>

        <section>
          <%= render 'shared/stats' %>
        </section>

      </aside>

      <div class="span6">
        <h3>Wall</h3>
        <%=  render 'shared/feed' %>
      </div>
    </div>

<%else%>
    <div class="row">
      <div class="span2">

      </div>
      <div class="span10">

        <div class="container">
          <div class="row">
            <div class="span5" >
              <%= form_for(:session, url: sessions_path) do |f| %>

                  <%= f.label :email %>
                  <%= f.text_field :email %>
                  </div>
                  <div class="span5" >

                    <%= f.label :password %>
                    <%= f.password_field :password %>
                  </div>
                  <!--    <div class="span3">
                 <label class="checkbox">
                   <input type="checkbox"> Remember me </input>
                 </label> </div>  -->
                  <div class="span2" >
                    <br/>
                    <%= f.submit 'Login', class: 'btn btn-success' %>
                  </div>
                  </div>
                  </div>
                  </div>

                  <div class="center">
                    <h1 class="titolo">Benvenuti in</h1>
                    <h1 class="titolo2">NEWDAD</h1>
                    <div class="center">Sei un nuovo utente? <%= link_to 'Registrati ora!', signup_path, class: 'btn btn-success' %></div>
                  </div>

                  </div>

              <% end %>

<% end %>
