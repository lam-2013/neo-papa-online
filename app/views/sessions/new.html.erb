<% provide :title, 'Intro' %>

<% if signed_in? %>

<div class="row" xmlns="http://www.w3.org/1999/html">
  <aside class="span3">
    <section>
      <%= render 'shared/user_info' %>
    </section>
  </aside>

  <div class="span9">
    <%= render 'shared/post_form' %>
    <h3>Wall</h3>
  </div>
</div>

<% else %>
    <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit 'Login', class: 'btn btn-large btn-primary' %>

    <% end %>



    <div class="center hero-unit">
      <h1>Benvenuto in New Dad</h1>
      <p>Nuovo utente? <%= link_to 'Registrati ora!', signup_path, class: 'btn btn-large btn-primary' %></p>
    </div>
<% end %>




