
<li class="posts">
  <%= gravatar_for message.sender, size: 100 %>
  <br/>
  <strong>Da: </strong><%= link_to message.sender.name, message.sender %>
  <span class="content">
    <strong><%= message.subject %></strong>
  </span>
  <span class="content"><%= message.body %></span>
  <span class="timestamp">
    Inviato <%= time_ago_in_words(message.created_at) %> fa
  </span>
  <% if current_user?(message.recipient) %>
      | <%= link_to 'Cancella', message, method: :delete, data: { confirm: 'Sei sicuro?' }, title: message.subject %>
      | <%= link_to 'Rispondi', new_message_path(user: message.sender.id, message: message), remote:true %>
      <div class="message"></div>
  <% end %>
</li>