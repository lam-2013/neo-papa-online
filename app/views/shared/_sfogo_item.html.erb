
<li id="<%= sfogo_item.id %>">
  <%= link_to gravatar_for(sfogo_item.user), sfogo_item.user %>
  <span class="user">
    <%= link_to sfogo_item.user.name, sfogo_item.user %>
  </span>
  <span class="content"><%= sfogo_item.content %></span>
  <span class="timestamp">
    Post creato <%= time_ago_in_words(sfogo_item.created_at) %> fa
  </span>
  <% if current_user?(sfogo_item.user) %>
      <%= link_to 'Cancella',  sfogo_item, method: :delete, data: {confirm: 'Sei sicuro?'}, title: sfogo_item.content, role: 'button', class: 'btn btn-large btn-primary' %>
  <% end %>
</li>